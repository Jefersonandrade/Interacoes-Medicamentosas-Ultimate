<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="InteracoesMedicamentosas">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>domainModel.PrincipioAtivo</class>
		<class>domainModel.Reacao</class>
		<class>domainModel.Medicamento</class>
		<class>domainModel.Fabricante</class>
		<class>domainModel.Usuario</class>
		<class>domainModel.IndiceRisco</class>
		<class>domainModel.IndiceConfiabilidade</class>
		<class>domainModel.IndiceGravidade</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/interacoesmedicamentosas"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
		</properties>
	</persistence-unit>
</persistence>
